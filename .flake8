[flake8]
exclude =
    .eggs
    .git
    .tox
    .venv
    build
max-line-length = 150
max-complexity = 25
import-order-style = smarkets
application-import-names = galaxy_utils
# E203 is whitespace before ':'; we follow black's formatting here. See https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html#flake8
# E501 is line length (delegated to black)
# W503 is line breaks before binary operators, which has been reversed in PEP 8.
ignore = E203,E501,SFS3,W503
